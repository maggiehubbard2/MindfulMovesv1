<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today's Habits"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/widget_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Habits List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Habit 1 -->
        <LinearLayout
            android:id="@+id/habit_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/check_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/habit_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit 1"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Habit 2 -->
        <LinearLayout
            android:id="@+id/habit_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/check_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/habit_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit 2"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Habit 3 -->
        <LinearLayout
            android:id="@+id/habit_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/check_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/habit_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit 3"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Habit 4 -->
        <LinearLayout
            android:id="@+id/habit_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/check_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/habit_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit 4"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Habit 5 -->
        <LinearLayout
            android:id="@+id/habit_row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/check_5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/checkbox_off_background" />

            <TextView
                android:id="@+id/habit_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habit 5"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

